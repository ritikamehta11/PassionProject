@model PassionProject.Models.GenreDto
@{
    ViewBag.Title = "DeleteConfirm";
}


<style>
    h5 {
        color: #274060;
        text-transform: capitalize;
    }

    h4 {
        color: darkslategrey;
        text-transform: capitalize;
    }

    p {
        text-transform: capitalize;
    }

    .btn-primary {
        background-color: #274060;
        color: #D0DB97;
        border: 1px solid transparent;
        padding: 0.3em 0.8em;
        margin-top: 1em;
        text-transform: capitalize;
    }
</style>
<h2>Delete Genre</h2>
<h4>@Model.Name </h4>
<p>@Model.Description</p>
<form action="/Genre/delete/@Model.GenreId" method="POST">
